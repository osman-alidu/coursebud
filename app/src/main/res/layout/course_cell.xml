<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxHeight="150dp">

    <TextView
        android:id="@+id/index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:textSize="35dp"
        android:layout_marginStart="80px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intro"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginStart="80px"
        android:layout_marginTop="100px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/index"/>

    <TextView
        android:id="@+id/split_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="100px"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/level"/>

    <TextView
        android:id="@+id/course_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1110"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="100px"
        android:layout_marginStart="30px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/split_line"/>

    <TextView
        android:id="@+id/stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="★★★★★"
        android:textSize="25dp"
        android:layout_marginStart="80px"
        android:layout_marginBottom="100px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/index"/>

    <TextView
        android:id="@+id/review_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="18dp"
        android:layout_marginStart="40px"
        android:layout_marginBottom="100px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/stars"/>

    <TextView
        android:id="@+id/reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reviews"
        android:textSize="18dp"
        android:layout_marginBottom="100px"
        android:layout_marginStart="15px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/review_number"/>

</androidx.constraintlayout.widget.ConstraintLayout>